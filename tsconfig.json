{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "typeRoots": [ 
      "node_modules/@types"
    ],
    "lib": [
      "es2019"
    ]
  }, 
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/**.ts",
  ]
}